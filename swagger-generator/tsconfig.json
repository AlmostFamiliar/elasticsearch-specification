{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": ["src/**.ts"],
    "files": [
        "node_modules/ntypescript/bin/ntypescript.d.ts"
    ],
  "typeAcquisition": {
    "enable": true
  }
}
