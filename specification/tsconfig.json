{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "files": [
        "src/domain.ts",
        "src/main.ts",
        "src/api-specification.ts",
        "src/specification/validator.ts",
        "src/specification/type-reader.ts",
        "typings/main.d.ts",
        "typings/main/ambient/lodash/lodash.d.ts",
        "typings/main/ambient/node/node.d.ts",
        "node_modules/ntypescript/bin/ntypescript.d.ts"
    ]
}
